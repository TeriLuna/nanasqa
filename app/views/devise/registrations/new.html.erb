<div class="section">
  <div class="container">
    <h3 class="font-weight-normal text-center margin-bottom-50"><%= t('login.sign_up') %> </h3>
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

            <%= f.label t('login.email').to_sym %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: t('login.email') %>

            <%= f.label t('login.password') %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t('login.min_characters') %>)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: t('login.new_password') %>

            <%= f.label t('login.password_confirmation') %><br />
            <%= f.password_field :password_confirmation, autocomplete: t('login.new_password') %>

            <%= f.submit t('login.sign_up'), class: "button button-md button-dark" %>
        <% end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
