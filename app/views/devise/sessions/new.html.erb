<div class="section">
  <div class="container">
    <h3 class="font-weight-normal text-center margin-bottom-50"> <%= t('header.login')%> </h3>
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">

        <!-- Snippet -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.label t('login.email') %>
          <%= f.email_field :email, autofocus: true, placeholder: t('login.enter_your_email') %>

          <%= f.label t('login.password') %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>

          <%= f.check_box :remember_me %>
          <%= f.label t('login.remember_me') %>

          <%= f.submit t('login.text'), class: "button button-md button-dark" %>
        <%- end %>

        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
