<div class="section">
  <%- if flash.any? %>
    <%- flash.each do |type, msg| %>
      <%- alert = type == "alert" ? 'danger' : 'success' %>
      <div class="alert alert-<%= alert %>  col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2" role="alert">
        <%= msg %>
      </div>
    <% end %>
  <% end %>
  <div class="container">
    <h3 class="font-weight-normal text-center margin-bottom-50"> <%= t('header.my_info')%> </h3>
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">

        <!-- Snippet -->
        <%= form_for(@reservation) do |f| %>
          <%= f.label t('reservations.start_date') %>
          <%= f.date_field :start_date %>

          <%= f.label t('reservations.end_date') %><br />
          <%= f.date_field :end_date %>

          <%= f.label t('reservations.message') %><br />
          <%= f.text_area :message %>

          <%= f.hidden_field(:room_id, value: @room.id) %>

          <%= f.submit t('reservations.create'), class: "button button-md button-dark" %>
        <%- end %>

      </div>
    </div>
  </div>
</div>
