<div class="row">
  <div class="col-12 col-lg-5 margin-top-20">
    <label id="name-label" for="first_name"><%= t('application_form.name')%></label>
    <%= f.text_field :first_name, required: true, placeholder: t('application_form.enter_name'), id: "first_name" %>
  </div>
  <div class="col-12 col-lg-7 margin-top-20">
    <label id="name-label" for="last_name"><%= t('application_form.last_name')%></label>
    <%= f.text_field :last_name, required: true, placeholder: t('application_form.enter_name'), id: "first_name" %>
  </div>
</div>
<div>
  <label class="margin-top-20" id="email-label" for="email"><%= t('application_form.email')%></label>
  <%= f.text_field :email, required: true, placeholder: t('application_form.enter_email'), id: "email" %>
</div>

<div class="row">
  <div  class="col-12 col-lg-3">
    <!-- country codes (ISO 3166) and Dial codes. -->
      <%= f.country_select :country_code, { priority_countries: ["PE"], format: :with_alpha2}, { class: "margin-top-60 width-270" } %>
  </div>
  <div  class="col-12 col-lg-5">
    <label class="margin-top-20" id="number-label" for="phone_number"><%= t('application_form.phone_number')%></label>
    <%= f.number_field :phone_number, required: true, placeholder: t('application_form.enter_number'), id: "phone_number", min: "1" %>
  </div>
  <!-- ------------------Radio Buttons-------------------------------- -->
  <div class="col-12 col-lg-2">
    <label class="margin-top-20" for="Gender"><%= t('application_form.gender')%></label>
    <p>
      <%= f.radio_button :gender, t('application_form.female').downcase, checked: true, required: true, id: "gender-female" %>
      <label class="" for="gender-female"><%= t('application_form.female')%></label>
      <br>
      <%= f.radio_button :gender, t('application_form.male').downcase, required: true, id: "gender-male" %>
      <label class="" for="gender-male"><%= t('application_form.male')%></label>
      <br>
      <%= f.radio_button :gender, "other", required: true, id: "gender-other" %>
      <label class="" for="gender-other"><%= t('application_form.not_say')%></label>
      <br>
    </p>
  </div>
  <div class="col-12 col-lg-2">
    <label class="margin-top-20" for="kind"><%= t('application_form.kind_volunteer')%></label>
    <p>
      <input type="radio" id="chkSolo" name="kind" checked value="solo">
      <label class="" for="chkSolo"><%= t('application_form.solo')%></label><br>

      <input type="radio" id="chkCouple" name="kind" value="couple">
      <label class="" for="chkCouple"><%= t('application_form.couple')%></label><br>
    </p>
  </div>
  <div class="col-12">
    <label for="skills-text"><%= t('application_form.which_skills')%></label><br>
    <%= f.text_area :skills, required: true, id: "skills-text", placeholder: t('application_form.enter_text') %>
  </div>
</div>
